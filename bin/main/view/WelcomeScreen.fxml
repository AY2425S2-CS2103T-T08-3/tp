<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.effect.DropShadow?>

<StackPane fx:id="welcomePane" styleClass="welcome-background" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="25" styleClass="welcome-container">
        <!-- Logo container with coffee icon, title and slogan -->
        <VBox alignment="CENTER" spacing="5" styleClass="logo-container">
            <!-- Coffee cup icon -->
            <ImageView fx:id="logoIconView" fitWidth="150" fitHeight="150" preserveRatio="true">
                <effect>
                    <DropShadow radius="5" color="#00000040"/>
                </effect>
            </ImageView>

            <!-- CaféConnect text -->
            <Label fx:id="titleLabel" text="CaféConnect" styleClass="welcome-title"/>

            <!-- Slogan text -->
            <Label fx:id="sloganLabel" text="from beans to business" styleClass="welcome-slogan"/>
        </VBox>

        <!-- Subtitle with better spacing -->
        <Label fx:id="subtitleLabel" text="Staff and Customer Management System" styleClass="welcome-subtitle"/>

        <!-- Button container with refined styling -->
        <HBox alignment="CENTER" spacing="30" styleClass="button-container">
            <Button fx:id="staffCustomerButton" text="Staff &amp; Customer Management" styleClass="welcome-button"/>
            <Button fx:id="drinksMenuButton" text="Drinks Menu" styleClass="welcome-button"/>
        </HBox>
    </VBox>
</StackPane>
